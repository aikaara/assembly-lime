  "buildCommand": "cd apps/web && npx tsc -b && npx vite build",
  "outputDirectory": "apps/web/dist",
  "installCommand": "bun install",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://assembly-line-ukroi.ondigitalocean.app/:path*" },
    { "source": "/ws", "destination": "https://assembly-line-ukroi.ondigitalocean.app/ws" }
  ]
}
