{
  "name": "assembly-lime",
  "version": "0.0.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '@assembly-lime/api' dev",
    "dev:web": "bun run --filter '@assembly-lime/web' dev",
    "dev:queue": "bunx bunqueue start",
    "dev:all": "bun run dev:queue & bun run --filter '*' dev",
    "build": "bun run build:web && bun run build:worker-claude && bun run build:worker-codex",
    "build:web": "cd apps/web && bun run build",
    "build:worker-claude": "NODE_ENV=production bun build apps/worker-claude/src/main.ts --outdir dist/worker-claude --target bun --minify",
    "build:worker-codex": "NODE_ENV=production bun build apps/worker-codex/src/main.ts --outdir dist/worker-codex --target bun --minify",
    "start": "pm2-runtime start ecosystem.config.cjs",
    "start:api": "NODE_ENV=production bun apps/api/src/index.ts",
    "start:worker-claude": "bun dist/worker-claude/main.js",
    "start:worker-codex": "bun dist/worker-codex/main.js",
    "stop": "pm2 stop ecosystem.config.cjs",
    "restart": "pm2 restart ecosystem.config.cjs",
    "logs": "pm2 logs",
    "status": "pm2 status",
    "db:generate": "drizzle-kit generate --config apps/api/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config apps/api/drizzle.config.ts",
    "db:push": "drizzle-kit push --config apps/api/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config apps/api/drizzle.config.ts",
    "db:seed": "bun run apps/api/src/db/seed.ts"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1"
  },
  "dependencies": {
    "@daytonaio/sdk": "^0.143.0",
    "bunqueue": "^2.4.6",
    "pm2": "^6.0.14",
    "postgres": "^3.4.8"
  }
}
